{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "emulators": {
    "firestore": {
      "port": 8082
    }
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/api/getPrediction", "function": "getPred" },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
